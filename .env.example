# KAS Racing root env template
# 이 파일은 로컬 실행 편의를 위한 통합 템플릿입니다.
# 실제 런타임은 각 앱의 .env 파일도 함께 사용합니다.

# ===== Common =====
NETWORK=testnet
NODE_ENV=development
VITEST=0
PORT=8787

# ===== Database =====
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kas_racing
DATABASE_SSL=false
DATABASE_POOL_MAX=20
DATABASE_CONNECT_TIMEOUT_MS=10000
DATABASE_SCHEMA_INIT_TIMEOUT_MS=30000
SKIP_DB_MIGRATIONS=false

# ===== Server Runtime =====
CORS_ORIGIN=http://localhost:5173

# ===== EVM Runtime (KASPLEX zkEVM Testnet) =====
EVM_CHAIN_ID=167012
EVM_RPC_URL=https://rpc.kasplextest.xyz
# deployed reference (2026-02-15 UTC)
# OPERATOR_ADDRESS=0xBc8d27aa7F866aD57A2D109043dB1feB9fa3c1f5
OPERATOR_PRIVATE_KEY=REPLACE_WITH_64_HEX
ESCROW_CONTRACT_ADDRESS=0xd731DB9644049F010bF595f94c91851D2e7765dD
REWARD_CONTRACT_ADDRESS=0xE2769EE0c03bA6b9aD881f4e02b3225aD1033889
FUEL_TOKEN_ADDRESS=0x_TO_BE_DEPLOYED
EVM_BRIDGE_POLL_MS=2000
EVM_BRIDGE_IDLE_POLL_MS=15000

# ===== EVM Indexer (apps/indexer-evm) =====
START_BLOCK=18827035
POLLING_INTERVAL_MS=2000
BATCH_SIZE=100
REORG_DEPTH=10

# ===== Client (Vite) =====
VITE_API_URL=http://localhost:8787
VITE_NETWORK=testnet
VITE_EXPLORER_URL=https://zkevm.kasplex.org
VITE_KFUEL_TOKEN_ADDRESS=0x_TO_BE_DEPLOYED
VITE_COVENANT_ENABLED=false

# ===== Optional reference aliases =====
KASPLEX_CHAIN_ID=167012
KASPLEX_RPC_URL=https://rpc.kasplextest.xyz
KASPLEX_EXPLORER_URL=https://zkevm.kasplex.org
