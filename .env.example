# KAS Racing root env template
# 이 파일은 로컬 실행 편의를 위한 통합 템플릿입니다.
# 실제 런타임은 각 앱의 .env 파일도 함께 사용합니다.

# ===== Common =====
NETWORK=testnet
NODE_ENV=development
VITEST=0
PORT=8787

# ===== Database =====
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kas_racing
DATABASE_SSL=false
DATABASE_POOL_MAX=20
SKIP_DB_MIGRATIONS=false

# ===== Server Runtime =====
CORS_ORIGIN=http://localhost:5173
MIN_REWARD_KAS=0.02
TX_POLL_INTERVAL_MS=2000
TX_IDLE_POLL_INTERVAL_MS=30000

# Legacy Kaspa key validation bypass (EVM 모드 로컬 실행 시 true 권장)
SKIP_KEY_VALIDATION=true

# ===== Legacy Kaspa Tx Path (optional) =====
TREASURY_PRIVATE_KEY=REPLACE_WITH_64_HEX
TREASURY_CHANGE_ADDRESS=kaspatest:REPLACE_WITH_TREASURY_ADDRESS
# 같은 지갑 재사용 가능: TREASURY_PRIVATE_KEY와 동일 키 사용 가능
ORACLE_PRIVATE_KEY=REPLACE_WITH_64_HEX

# ===== EVM Runtime (KASPLEX zkEVM Testnet) =====
EVM_CHAIN_ID=167012
EVM_RPC_URL=https://rpc.kasplextest.xyz
# 같은 지갑 재사용 가능: OPERATOR_PRIVATE_KEY = TREASURY_PRIVATE_KEY 가능
OPERATOR_PRIVATE_KEY=REPLACE_WITH_64_HEX
ESCROW_CONTRACT_ADDRESS=0x_TO_BE_DEPLOYED
REWARD_CONTRACT_ADDRESS=0x_TO_BE_DEPLOYED
EVM_BRIDGE_POLL_MS=2000
EVM_BRIDGE_IDLE_POLL_MS=15000

# ===== EVM Indexer (apps/indexer-evm) =====
START_BLOCK=0
POLLING_INTERVAL_MS=2000
BATCH_SIZE=100
REORG_DEPTH=10

# ===== Client (Vite) =====
VITE_API_URL=http://localhost:8787
VITE_NETWORK=testnet
VITE_EXPLORER_URL=https://zkevm.kasplex.org
VITE_COVENANT_ENABLED=false

# ===== Optional reference aliases =====
KASPLEX_CHAIN_ID=167012
KASPLEX_RPC_URL=https://rpc.kasplextest.xyz
KASPLEX_EXPLORER_URL=https://zkevm.kasplex.org
