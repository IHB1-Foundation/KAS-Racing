{
  "name": "kas-racing",
  "private": true,
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "dev": "concurrently -k -n client,server -c green,blue \"pnpm --filter @kas-racing/client dev\" \"pnpm --filter @kas-racing/server dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^15.0.0",
    "happy-dom": "^20.4.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0"
  }
}
